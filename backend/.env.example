# App
APP_DEBUG=false
APP_LOG_LEVEL=INFO
# If your API is mounted behind a subpath at the proxy (e.g., /notes or /api),
# set the same path here so FastAPI generates correct URLs.
# Leave empty ("") if served at domain root.
APP_ROOT_PATH=""

# API configuration
# Default internal prefix for versioned API routes
APP_API_PREFIX=/api/v1

# CORS: either use JSON list for origins or a regex. Prefer explicit origins in prod.
# Example for local dev:
APP_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000","http://127.0.0.1:8000"]
# Optional regex (use one or the other). Example to allow all localhost ports:
# APP_CORS_ORIGIN_REGEX="^https?://localhost(:\d+)?$"

# Trusted hosts for Starlette TrustedHostMiddleware. Use ["*"] for dev only.
APP_TRUSTED_HOSTS=["*"]

# Supabase (required)
APP_SUPABASE_URL=
APP_SUPABASE_ANON_KEY=
APP_SUPABASE_SERVICE_ROLE_KEY=

# OpenAI (required)
APP_OPENAI_API_KEY=

# Agent model configuration (optional)
APP_AGENT_MODEL=gpt-5
APP_AGENT_MODEL_REASONING=medium
APP_AGENT_MODEL_TEXT_VERBOSITY=low

# Enrichment model configuration
APP_ENRICHMENT_MODEL=gpt-5-nano
APP_ENRICHMENT_MODEL_REASONING=medium

# Authentication / rate limiting (optional)
APP_MAX_LOGIN_ATTEMPTS=5                 # Max failed attempts before temp limiting
APP_LOGIN_ATTEMPT_WINDOW=300             # Seconds (5 minutes)
APP_ENABLE_RATE_LIMITING=true            # true | false